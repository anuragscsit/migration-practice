<h1>Semester list</h1>

<p id="notice"><%= notice %></p>


<table>
  <thead>
    <tr>
      <th>Semester</th>
      <th colspan="3"></th>
    </tr>
    
  </thead>

  <tbody>
    <% @semester.each do |semester| %>
      <tr>
        <td><%= semester.sem %></td>
        <td><%= link_to 'Show', semester %></td>
        <td><%= link_to 'Edit', edit_semester_path(semester) %></td>
        <td><%= button_to 'Destroy', semester, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Semester', new_semester_path %>
